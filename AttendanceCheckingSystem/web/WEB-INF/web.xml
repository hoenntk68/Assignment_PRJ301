<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimetableController</servlet-name>
        <servlet-class>controller.timetable.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionReportController</servlet-name>
        <servlet-class>controller.attendance.SessionReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupReportController</servlet-name>
        <servlet-class>controller.attendance.GroupReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionAttendanceController</servlet-name>
        <servlet-class>controller.attendance.SessionAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimetableController</servlet-name>
        <url-pattern>/weeklyTimetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionReportController</servlet-name>
        <url-pattern>/sessionReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupReportController</servlet-name>
        <url-pattern>/groupReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionAttendanceController</servlet-name>
        <url-pattern>/sessionAttendance</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
