<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimetableController</servlet-name>
        <servlet-class>controller.timetable.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionReportController</servlet-name>
        <servlet-class>controller.attendance.SessionReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupReportController</servlet-name>
        <servlet-class>controller.attendance.GroupReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionAttendanceController</servlet-name>
        <servlet-class>controller.attendance.SessionAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceTakingController</servlet-name>
        <servlet-class>controller.attendance.AttendanceTakingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTimetableController</servlet-name>
        <servlet-class>controller.timetable.StudentTimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAttendanceController</servlet-name>
        <servlet-class>controller.attendance.StudentAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherGroupListController</servlet-name>
        <servlet-class>controller.list.TeacherGroupListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentGroupListController</servlet-name>
        <servlet-class>controller.list.StudentGroupListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.home.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimetableController</servlet-name>
        <url-pattern>/instructor/weeklyTimetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionReportController</servlet-name>
        <url-pattern>/instructor/sessionReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupReportController</servlet-name>
        <url-pattern>/instructor/groupReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionAttendanceController</servlet-name>
        <url-pattern>/instructor/sessionAttendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceTakingController</servlet-name>
        <url-pattern>/instructor/attendanceTaking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTimetableController</servlet-name>
        <url-pattern>/student/weeklyTimetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAttendanceController</servlet-name>
        <url-pattern>/student/viewAttendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherGroupListController</servlet-name>
        <url-pattern>/instructor/groupList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentGroupListController</servlet-name>
        <url-pattern>/student/groupList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
